<!-- version: changelog 1.0.0 -->

<r:grammar
  xmlns:c="http://www.io7m.com/schemas/changelog/1.0.0"
  xmlns:r="http://relaxng.org/ns/structure/1.0"
  datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

  <r:start combine="choice">
    <r:ref name="io7m.changelog.changelog" />
  </r:start>
  
  <r:define name="io7m.changelog.item.summary">
    <r:element name="c:summary">
      <r:data type="token" />
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.date">
    <r:element name="c:date">
      <r:data type="date" />
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.item.ticket">
    <r:element name="c:ticket">
      <r:data type="token" />
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.item">
    <r:element name="c:item">
      <r:interleave>
        <r:optional>
          <r:ref name="io7m.changelog.item.ticket" />
        </r:optional>
        <r:ref name="io7m.changelog.item.summary" />
        <r:ref name="io7m.changelog.date" />
        <r:choice>
          <r:element name="c:type-code-new">
            <r:empty />
          </r:element>
          <r:element name="c:type-code-change">
            <r:empty />
          </r:element>
          <r:element name="c:type-code-fix">
            <r:empty />
          </r:element>
          <r:element name="c:type-platform-new">
            <r:empty />
          </r:element>
        </r:choice>
      </r:interleave>
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.release.version">
    <r:element name="c:version">
      <r:data type="token" />
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.release">
    <r:element name="c:release">
      <r:attribute name="ticket-system">
        <r:data type="IDREF" />
      </r:attribute>
      <r:interleave>
        <r:ref name="io7m.changelog.date" />
        <r:ref name="io7m.changelog.release.version" />
      </r:interleave>
      <r:oneOrMore>
        <r:ref name="io7m.changelog.item" />
      </r:oneOrMore>
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.ticket-url">
    <r:element name="c:ticket-url">
      <r:data type="anyURI" />
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.ticket-system">
    <r:element name="c:ticket-system">
      <r:attribute name="xml:id">
        <r:data type="ID" />
      </r:attribute>
      <r:oneOrMore>
        <r:ref name="io7m.changelog.ticket-url" />
      </r:oneOrMore>
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.project">
    <r:element name="c:project">
      <r:data type="token" />
    </r:element>
  </r:define>

  <r:define name="io7m.changelog.changelog">
    <r:element name="c:changelog">
      <r:optional>
        <r:attribute name="xml:id">
          <r:data type="ID" />
        </r:attribute>
      </r:optional>
      <r:optional>
        <r:attribute name="xml:base">
          <r:data type="token" />
        </r:attribute>
      </r:optional>
      <r:ref name="io7m.changelog.project" />
      <r:oneOrMore>
        <r:choice>
          <r:ref name="io7m.changelog.release" />
          <r:ref name="io7m.changelog.ticket-system" />
        </r:choice>
      </r:oneOrMore>
    </r:element>
  </r:define>

</r:grammar>
